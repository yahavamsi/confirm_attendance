extends layout

block content
  .container
    if signupFailed
      h3.alert.alert-danger.text-center Failed to sign up, please try later!
    if userAlreadyExists
      h3.alert.alert-danger.text-center Bad user name!
    form.form-signin(action=stage + '/signup', method='post')
      h2.form-signin-heading Please enter user details
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(name='user' type='email', placeholder='Email address', required='', autofocus='')
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(name='password' type='password', placeholder='Password', required='')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
